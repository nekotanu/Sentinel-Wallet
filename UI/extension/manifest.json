{
    "manifest_version": 3,
    "name": "Sentinel Wallet",
    "version": "0.1",
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/contentScript.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}